{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Verse",
  "scopeName": "source.verse",
  "patterns": [
    { "include": "#comments" },
    { "include": "#attributes" },
    { "include": "#using-directive" },
    { "include": "#class-declaration" },
    { "include": "#constant-declaration" },
    { "include": "#variable-declaration" },
    { "include": "#function-declaration" },
    { "include": "#for-loop" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#type-annotation" },
    { "include": "#operators" },
    { "include": "#member-access" },
    { "include": "#bracket-access" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.verse",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.verse",
          "match": "//.*$"
        },
        {
          "name": "comment.block.verse",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.verse",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.verse",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.verse",
              "match": "\\{[^}]*\\}"
            }
          ]
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.verse",
          "match": "\\b(if|then|else|loop|while|for|return|break|continue|race|block|spawn|Sleep|Print)\\b"
        },
        {
          "name": "keyword.declaration.verse",
          "match": "\\b(class|function|delegate|event|using|module)\\b"
        },
        {
          "name": "keyword.operator.verse",
          "match": "\\b(set|operator|cast|assert|where|in|option)\\b"
        },
        {
          "name": "storage.modifier.verse",
          "match": "\\b(immutable|mutable|static|transient|override|final|optional|localizes|suspends|concrete|public|private|protected|internal)\\b"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.verse",
          "match": "\\b(int|string|float|double|bool|logic|void|any|vector3|tuple|map|array|player|agent|message|transform|rotation)\\b"
        },
        {
          "name": "storage.type.device.verse",
          "match": "\\b([a-z_][a-z0-9_]*_device)\\b"
        },
        {
          "name": "storage.type.collection.verse",
          "match": "\\[\\]"
        },
        {
          "name": "entity.name.type.verse",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.verse",
          "match": "\\b(true|false|none)\\b"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.verse",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.verse",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "attributes": {
      "patterns": [
        {
          "name": "storage.modifier.attribute.verse",
          "match": "@[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },

    "using-directive": {
      "patterns": [
        {
          "name": "meta.using.verse",
          "begin": "\\busing\\b",
          "beginCaptures": {
            "0": {
              "name": "keyword.other.using.verse"
            }
          },
          "end": "(?=$|\\})",
          "patterns": [
            {
              "name": "punctuation.section.braces.verse",
              "match": "[{}]"
            },
            {
              "name": "entity.name.namespace.verse",
              "match": "\\/[A-Za-z0-9_./]+"
            }
          ]
        }
      ]
    },

    "class-declaration": {
      "patterns": [
        {
          "name": "meta.class.verse",
          "match": "^(\\s*)([A-Z][A-Za-z0-9_]*)\\s*:=\\s*class",
          "captures": {
            "2": {
              "name": "entity.name.type.class.verse"
            }
          }
        }
      ]
    },

    "for-loop": {
      "patterns": [
        {
          "comment": "for(Item : Collection)",
          "name": "meta.for-loop.verse",
          "match": "\\b(for)\\s*\\(\\s*([A-Z][A-Za-z0-9_]*)\\s*:",
          "captures": {
            "1": {
              "name": "keyword.control.verse"
            },
            "2": {
              "name": "constant.other.verse"
            }
          }
        }
      ]
    },

    "constant-declaration": {
      "patterns": [
        {
          "comment": "Editable with type constructor: @editable Name : Type = Type{}",
          "name": "meta.editable.typed.verse",
          "match": "@editable\\s+([A-Z][A-Za-z0-9_]*)\\s*:\\s*([A-Za-z_][A-Za-z0-9_<>\\[\\]?]*)\\s*=\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*\\{\\}",
          "captures": {
            "1": {
              "name": "constant.other.verse"
            },
            "2": {
              "name": "entity.name.type.verse"
            },
            "3": {
              "name": "entity.name.type.verse"
            }
          }
        },
        {
          "comment": "Constant with type annotation: Name : type = value (not followed by {})",
          "name": "meta.constant.typed.verse",
          "match": "^\\s*([A-Z][A-Za-z0-9_]*)\\s*:\\s*([A-Za-z_][A-Za-z0-9_<>\\[\\]?]*)\\s*=(?!\\s*[A-Za-z_][A-Za-z0-9_]*\\s*\\{\\})",
          "captures": {
            "1": {
              "name": "constant.other.verse"
            },
            "2": {
              "name": "entity.name.type.verse"
            }
          }
        },
        {
          "comment": "Constant with inference: Name := value",
          "name": "meta.constant.inferred.verse",
          "match": "([A-Z][A-Za-z0-9_]*)\\s*:=(?!\\s*class)",
          "captures": {
            "1": {
              "name": "constant.other.verse"
            }
          }
        }
      ]
    },

    "variable-declaration": {
      "patterns": [
        {
          "name": "meta.variable.declaration.verse",
          "match": "\\b(var)\\s+([A-Z][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "storage.type.var.verse"
            },
            "2": {
              "name": "variable.other.definition.verse"
            }
          }
        }
      ]
    },

    "function-declaration": {
      "patterns": [
        {
          "name": "meta.function.verse",
          "match": "([A-Z][A-Za-z0-9_]*)\\s*(<[^>]+>)?\\s*(\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.verse"
            },
            "2": {
              "name": "storage.modifier.generic.verse"
            },
            "3": {
              "name": "punctuation.definition.parameters.begin.verse"
            }
          }
        }
      ]
    },

    "type-annotation": {
      "patterns": [
        {
          "name": "meta.type.annotation.verse",
          "match": "(:)\\s*(\\?)?\\s*([A-Za-z_][A-Za-z0-9_]*(?:\\[\\])?)",
          "captures": {
            "1": {
              "name": "punctuation.separator.type.verse"
            },
            "2": {
              "name": "keyword.operator.optional.verse"
            },
            "3": {
              "name": "entity.name.type.verse"
            }
          }
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.verse",
          "match": ":=|="
        },
        {
          "name": "keyword.operator.comparison.verse",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.verse",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.logical.verse",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.optional.verse",
          "match": "\\?"
        }
      ]
    },

    "bracket-access": {
      "patterns": [
        {
          "name": "meta.bracket.access.verse",
          "begin": "\\[",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.verse"
            }
          },
          "end": "\\]",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.bracket.verse"
            }
          },
          "patterns": [
            {
              "name": "constant.other.verse",
              "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            }
          ]
        }
      ]
    },

    "member-access": {
      "patterns": [
        {
          "name": "meta.member.access.verse",
          "match": "\\.([A-Z][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "variable.other.member.verse"
            }
          }
        }
      ]
    }
  }
}